<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs')-%>
<body>

    <%- include('./partials/navbar.ejs')-%>

    <!-- ======= Connect Section ======= -->
    <section id="connect" class="connect">

        <div class="container" data-aos="fade-up">

            <header class="section-header" style="margin-top: 50px">
                <h2>Search Assets</h2>
                <p>Get Asset by Name or ID</p>
            </header>

            <div class="row gy-4">

                <div class="col-lg-12">

                    <form action="/get_asset" method="post" class="connect-form">
                        <div class="row gy-4">

                            <div class="col-md-12">
                                <input type="text" name="name" class="form-control" placeholder="Asset Name" required>
                            </div>

                            <div class="col-md-12">
                                <input type="text" class="form-control" name="id" placeholder="Asset Id" required>
                            </div>

                            <div class="col-md-12 text-center">
                                <button type="submit">Search Assets</button>
                            </div>

                        </div>
                    </form>

                </div>

            </div>

        </div>

    </section><!-- End Connect Section -->

    </main><!-- End #main -->

    <%- include('./partials/footer.ejs')-%>

</body>

</html>
